{
  "name": "api-segura",
  "version": "1.0.0",
  "description": "API REST segura con autenticación JWT, validación, rate limiting y protecciones contra ataques",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest --testNamePattern=\"auth\"",
    "test:security": "jest --testNamePattern=\"security\"",
    "test:rate-limit": "jest --testNamePattern=\"rate.*limit\"",
    "test:validation": "jest --testNamePattern=\"validation\"",
    "test:sql-injection": "jest --testNamePattern=\"sql.*injection\"",
    "init-db": "node src/config/database.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "express",
    "jwt",
    "security",
    "api",
    "authentication",
    "authorization",
    "bcrypt",
    "rate-limiting",
    "cors",
    "validation",
    "sql-injection",
    "helmet",
    "worldskills"
  ],
  "author": "WorldSkills Bootcamp",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.8.1",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "sqlite3": "^5.1.6",
    "winston": "^3.10.0",
    "joi": "^17.9.2",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0",
    "eslint-config-node": "^4.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/database.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/worldskills-bootcamp/api-segura.git"
  },
  "bugs": {
    "url": "https://github.com/worldskills-bootcamp/api-segura/issues"
  },
  "homepage": "https://github.com/worldskills-bootcamp/api-segura#readme"
}
