# Variables de entorno para API Segura
# Copia este archivo como .env y configura los valores apropiados

# === CONFIGURACIÃ“N GENERAL ===
NODE_ENV=development
PORT=3000
API_VERSION=v1

# === JWT CONFIGURATION ===
JWT_SECRET=tu_clave_secreta_super_segura_de_256_bits_minimo
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d
JWT_ISSUER=worldskills-bootcamp
JWT_AUDIENCE=worldskills-students

# === DATABASE ===
DB_PATH=./database.sqlite
DB_BACKUP_PATH=./backups/

# === SECURITY ===
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
LOGIN_ATTEMPTS_MAX=5
LOGIN_ATTEMPTS_WINDOW=900000

# === CORS ===
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://mi-app.com
CORS_CREDENTIALS=true

# === LOGGING ===
LOG_LEVEL=info
LOG_FILE=./logs/app.log
SECURITY_LOG_FILE=./logs/security.log
ERROR_LOG_FILE=./logs/error.log

# === HELMET SECURITY HEADERS ===
CSP_REPORT_URI=/api/security/csp-report
CSP_REPORT_ONLY=false
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# === RATE LIMITING ===
RATE_LIMIT_TRUST_PROXY=false
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true
RATE_LIMIT_SKIP_FAILED_REQUESTS=false

# === MONITORING ===
ENABLE_METRICS=true
METRICS_PORT=3001
HEALTH_CHECK_PATH=/health

# === EMAIL (para notificaciones de seguridad) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-password-de-app
ADMIN_EMAIL=admin@tu-dominio.com

# === REDIS (para cache y sesiones) ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# === DESARROLLO ===
ENABLE_SWAGGER=true
SWAGGER_PATH=/api-docs
ENABLE_CORS_DEBUG=true
ENABLE_SQL_LOGGING=true
